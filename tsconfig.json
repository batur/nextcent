{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components": ["components"],
      "@constants": ["constants"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@lib": ["lib"],
      "@styles/*": ["styles/*"],
      "@context": ["context"],
      "@context/*": ["context/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
